{% extends 'private_site/base.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
<div class="container-fluid spaced wws-confirmator">
    <div class="container">
        <div class="custom-content-in">
        <h1>{{'confirmator.title'|trans}}</h1>
        <ul>
        {% for i in range(0,2) -%}
           <li>{{('confirmator.instructions.'~i)|trans}}</li>
        {%- endfor %}
        </ul>
        {{ form_start(form) }}
        {{ form_widget(form.parameterValues) }}
        {% for formPerson in form.children.people.children %}
            {% include 'private_site/confirmator/rowPerson.html.twig' with {'form': formPerson} %}
        {% endfor %}
        {{ form_widget(form.submit, {'attr': {'class' : 'btn-lg btn-block'}} ) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/confirmator.js') }}"></script>
{% endblock %}
