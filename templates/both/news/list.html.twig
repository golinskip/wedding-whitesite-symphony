
{% for news in pagination %}
{#% if loop.index is odd %#}
    <div class="row">
        <div class="col-sm-4">
            {% if news.image %}
                <a href="{{ path(news_path, {'slug': news.urlName}) }}" class=""><img src="{% path news.image, 'big' %}" class="img-thumbnail"></a>
            {% endif %}
        </div>
        <div class="col-sm-8">
            <h3 class="title">
                <a href="{{ path(news_path, {'slug': news.urlName}) }}" class="">
                    {{ news.title }}
                </a>
            </h3>
            <p class="text-muted">{{ news.startPublishAt|date('l, d F Y @ H:i') }}</p>
            <p>{{ news.lead }}</p>
            {% if news.author %}
            <p class="text-muted">Author by <b>{{ news.author }}</b></p>
            {% endif %}
            <p><a href="{{ path(news_path, {'slug': news.urlName}) }}">Read more &raquo;</a></p>
        </div>
    </div>
    <hr>
{% endfor %}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>